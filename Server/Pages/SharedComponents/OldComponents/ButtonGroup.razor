@if (!IsConfirmed)
{
    <div class="row">
        <div class="btn-group">
            @foreach(var link in Links)
            {
                <a class="btn btn-@link.Key[1] col-sm-4" href="@link.Key">@link.Key[0]</a>
            }
            <button class="btn btn-danger col-sm-4" @onclick="Confirm">Delete</button>
        </div>
    </div>
}
else
{
    <div>
        <div class="row">
            <h3 style="text-align: center;background-color: red;color: white;border-radius: 4px;">ARE YOU SURE?</h3>
        </div>
        <div class="row">
            <button class="btn btn-danger col-sm-6" @onclick="Confirmed">Yes</button>
            <button class="btn btn-success col-sm-6" @onclick="Confirm">No</button>
        </div>
    </div>
}


@code {
    [Parameter]
    public Dictionary<string, string[]> Links { get; set; } = new();

    public bool IsConfirmed { get; set; } = false;
    
    public void Confirm()
    {
        IsConfirmed = !IsConfirmed;
    }

    public void Confirmed()
    {
        IsConfirmed = !IsConfirmed;
    }
}
