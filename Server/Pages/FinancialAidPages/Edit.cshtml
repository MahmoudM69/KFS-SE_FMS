@page
@model Server.Pages.FinancialAidPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FinancialAid</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FinancialAid.FinancialAidId" />
            <div class="form-group">
                <label asp-for="FinancialAid.MinBalance" class="control-label"></label>
                <input asp-for="FinancialAid.MinBalance" class="form-control" />
                <span asp-validation-for="FinancialAid.MinBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinancialAid.MaxBalance" class="control-label"></label>
                <input asp-for="FinancialAid.MaxBalance" class="form-control" />
                <span asp-validation-for="FinancialAid.MaxBalance" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FinancialAid.Percentage" /> @Html.DisplayNameFor(model => model.FinancialAid.Percentage)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FinancialAid.AidAmount" class="control-label"></label>
                <input asp-for="FinancialAid.AidAmount" class="form-control" />
                <span asp-validation-for="FinancialAid.AidAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinancialAid.EstablishmentId" class="control-label"></label>
                <select asp-for="FinancialAid.EstablishmentId" class="form-control" asp-items="ViewBag.EstablishmentId"></select>
                <span asp-validation-for="FinancialAid.EstablishmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
