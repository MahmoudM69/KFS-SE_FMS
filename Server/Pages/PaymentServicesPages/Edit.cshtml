@page
@model Server.Pages.PaymentServicesPages.EditModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PaymentService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymentService.PaymentServiceId" />
            <div class="form-group">
                <label asp-for="PaymentService.PaymentServiceName" class="control-label"></label>
                <input asp-for="PaymentService.PaymentServiceName" class="form-control" />
                <span asp-validation-for="PaymentService.PaymentServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentService.PaymentServiceProvider" class="control-label"></label>
                <input asp-for="PaymentService.PaymentServiceProvider" class="form-control" />
                <span asp-validation-for="PaymentService.PaymentServiceProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentService.PaymentServiceFee" class="control-label"></label>
                <input asp-for="PaymentService.PaymentServiceFee" class="form-control" />
                <span asp-validation-for="PaymentService.PaymentServiceFee" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaymentService.Percentage" /> @Html.DisplayNameFor(model => model.PaymentService.Percentage)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
