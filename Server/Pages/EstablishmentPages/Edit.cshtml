@page
@model Server.Pages.EstablishmentPages.EditModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles ="Admin")]
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Establishment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Establishment.EstablishmentId" />
            <div class="form-group">
                <label asp-for="Establishment.EstablishmentName" class="control-label"></label>
                <input asp-for="Establishment.EstablishmentName" class="form-control" />
                <span asp-validation-for="Establishment.EstablishmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.EstablishmentAddress" class="control-label"></label>
                <input asp-for="Establishment.EstablishmentAddress" class="form-control" />
                <span asp-validation-for="Establishment.EstablishmentAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.EstablishmentDescription" class="control-label"></label>
                <textarea asp-for="Establishment.EstablishmentDescription" class="form-control" />
                <span asp-validation-for="Establishment.EstablishmentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.Balance" class="control-label"></label>
                <input asp-for="Establishment.Balance" class="form-control" />
                <span asp-validation-for="Establishment.Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Establishment.EstablishmentTypeId" class="control-label"></label>
                <select asp-for="Establishment.EstablishmentTypeId" class="form-control" asp-items="ViewBag.EstablishmentTypeId"></select>
                <span asp-validation-for="Establishment.EstablishmentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
